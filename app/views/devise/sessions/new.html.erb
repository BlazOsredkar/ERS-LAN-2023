
<div class="container-login">
<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <%= image_tag asset_path("gaming.svg"), class: 'img-fluid img-login' %>
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <!-- Email input -->
          <div class="form-outline mb-4">
            <label class="form-label" for="form1Example13">E-po≈°ta</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg" %>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <label class="form-label" for="form1Example23">Geslo</label>
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control form-control-lg" %>
          </div>

          <div class="d-flex justify-content-around align-items-center mb-4">
            <!-- Checkbox -->
            <div class="form-check">
              <%= f.check_box :remember_me, class:"form-check-input" %>
              <label class="form-check-label" for="form1Example3">  Zapomni si me </label>
            </div>
            
          </div>

          <!-- Submit button -->
          <%= f.submit "Prijava", class:"btn btn-primary btn-lg btn-block" %>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-login-or">ALI</p>
          </div>
          
          <div class="login-links">
            <%= render "devise/shared/links" %>
          </div>


          <%# <a class="btn btn-primary btn-lg btn-block" style="background-color: #3b5998" href="#!"
            role="button">
            <i class="fab fa-facebook-f me-2"></i>Continue with Facebook
          </a>
          <a class="btn btn-primary btn-lg btn-block" style="background-color: #55acee" href="#!"
            role="button">
            <i class="fab fa-twitter me-2"></i>Continue with Twitter</a>  %>

        <% end %>
      </div>
    </div>
  </div>
</section>
</div>
