
<div class="container-login">
  <section class="vh-100">
    <div class="container py-5 h-100">
      <div class="row align-items-center justify-content-center h-100">
        <div class="col-md-8 col-lg-7 col-xl-6">
          <%= image_tag asset_path("register.svg"), class: 'img-fluid img-login' %>
        </div>
        <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            
            <!-- First Row of Inputs -->
            <div class="row">
              <div class="col-md-6 mb-4">
                <div class="form-outline">
                  <label class="form-label" for="email">E-pošta</label>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <div class="form-outline">
                  <label class="form-label" for="username">Uporabniško ime</label>
                  <%= f.text_field :username, class: "form-control form-control-lg" %>
                </div>
              </div>
            </div>
            
            <!-- Second Row of Inputs -->
            <div class="row">
              <div class="col-md-6 mb-4">
                <div class="form-outline">
                  <label class="form-label" for="name">Ime</label>
                  <%= f.text_field :name, class: "form-control form-control-lg" %>
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <div class="form-outline">
                  <label class="form-label" for="surname">Priimek</label>
                  <%= f.text_field :surname, class: "form-control form-control-lg" %>
                </div>
              </div>
            </div>

            <!-- Third Row of Inputs -->
            <div class="row">
              <div class="col-md-6 mb-4">
                <div class="form-outline">
                  <label class="form-label" for="name">Geslo</label>
                  <%= f.password_field :password, autocomplete: "new-password", class:"form-control form-control-lg" %>
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <div class="form-outline">
                  <label class="form-label" for="surname">Potrdi geslo</label>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control form-control-lg" %>
                </div>
              </div>
            </div>

            <!-- Fourth Row of Inputs -->
            <div class="form-outline mb-4 text-center">
              <label class="form-label text-center" for="form1Example23">Status</label>
              <br>
              <%= f.select :user_status_id, options_for_select(UserStatus.all.map{ |status| [status.name, status.id] }), {}, class:"select-dropdown-login" %>
            </div>

            <div class="d-flex justify-content-around align-items-center">
            <!-- Checkbox -->
            <div class="form-check">
               <%= f.check_box :has_equipment, class:"form-check-input" %>
              <label class="form-check-label" for="form1Example3"> Imam opremo </label>
            </div>
            
          </div>


            <!-- Submit button -->
            <%= f.submit "Registracija", class: "btn btn-primary btn-lg btn-block mt-4" %>

            <div class="divider d-flex align-items-center my-4">
              <p class="text-center fw-bold mx-3 mb-0 text-login-or">ALI</p>
            </div>
            
            <div class="login-links">
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</div>