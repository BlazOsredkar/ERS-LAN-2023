<div class="container-login">
<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <%= image_tag asset_path("forgot_pass.svg"), class: 'img-fluid img-login' %>
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <!-- Email input -->
          <div class="form-outline mb-4">
            <label class="form-label" for="form1Example13">E-pošta</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg" %>
          </div>

          <!-- Submit button -->
          <%= f.submit "Pošlji zahtevek za geslo", class:"btn btn-primary btn-lg btn-block" %>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-login-or">ALI</p>
          </div>
          
          <div class="login-links">
            <%= render "devise/shared/links" %>
          </div>


        <% end %>
      </div>
    </div>
  </div>
</section>
</div>
