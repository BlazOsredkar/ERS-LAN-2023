<body class="login-back">
<%= form_with(model: team) do |form| %>
  <% if team.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
        <% team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Ime ekipe:", class:"text-login-or" %>
    <br>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :game_ids, 'Izberi igre:', class:"text-login-or" %>
    <% Game.all.each do |game| %>
      <div class="form-check">
        <%= form.check_box :game_ids, { multiple: true }, game.id, nil %>
        <%= form.label game.name, class: 'form-check-label' %>
      </div>
    <% end %>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>
</body>

