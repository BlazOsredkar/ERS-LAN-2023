<body class="login-back">
<%= form_with(model: team) do |form| %>
  <% if team.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
        <% team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Ime ekipe:", class:"text-login-or" %>
    <br>
    <%= form.text_field :name %>
  </div>

<div class="form-group">
    <%= form.label :game_id, 'Izberi igro:', class: "text-login-or" %>
    <div class="game-buttons">
      <% Game.all.each do |game| %>
        <label class="game-radio">
          <%= form.radio_button :game_id, game.id, class: 'game-radio-button' %>
          <%= image_tag("games/#{game.picture_name}.png", alt: game.name, class: 'game-image') %>
          <p class="game-button-title text-login-or"><%= game.name %></p>
        </label>
      <% end %>
    </div>
  </div>




  <div>
    <%= form.submit %>
  </div>
<% end %>
</body>

